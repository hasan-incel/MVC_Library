@model MVC_Library.ViewModels.AuthorViewModel

<h1 class="mt-4">Author List</h1>
<a class="btn btn-primary mb-3" asp-controller="Author" asp-action="Create">Add New Author</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
                <tr>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td>@author.DateOfBirth.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Author" asp-action="Details" asp-route-id="@author.AuthorId">Details</a>
                        <a class="btn btn-warning btn-sm" asp-controller="Author" asp-action="Edit" asp-route-id="@author.AuthorId">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Author" asp-action="Delete" asp-route-id="@author.AuthorId">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
