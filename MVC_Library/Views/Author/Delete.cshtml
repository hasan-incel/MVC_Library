@model MVC_Library.Models.Author

<h1>Delete Author</h1>

<h3>Are you sure you want to delete this author?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <p>Date of Birth: @Model.DateOfBirth.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.AuthorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Author" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
