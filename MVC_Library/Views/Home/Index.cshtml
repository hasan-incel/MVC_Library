@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <div class="jumbotron bg-light">
        <h1 class="display-4">Welcome to MVC Library!!!</h1>
        <p class="lead">Explore a world of books and authors.</p>
        <hr class="my-4">
        <p>If you haven't signed up, please click the button below:</p>
        <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Auth" asp-action="SignUp">Sign Up</a>
    </div>

    <div class="alert alert-danger mt-4" role="alert" style="font-size: 1.2rem;">
        Please make sure to add an Author in the Author List in order to create a new Book List.
    </div>

    <div class="mt-5">
        <h2>Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Wide Selection</h5>
                        <p class="card-text">Discover a diverse range of genres and authors.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">User-Friendly</h5>
                        <p class="card-text">Easy navigation and a seamless experience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Community Focused</h5>
                        <p class="card-text">Join a community of book lovers and share your thoughts.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
