@model MVC_Library.Models.Book

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>@Model.Title</h4>
    <p>Author ID: @Model.AuthorId</p>
    <p>Genre: @Model.Genre</p>
    <p>Publish Date: @Model.PublishDate.ToShortDateString()</p>
    <p>ISBN: @Model.ISBN</p>
    <p>Copies Available: @Model.CopiesAvailable</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.BookId" /> <!-- Ensure this matches the DeleteConfirmed action parameter -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Book" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
